{
  "name": "nft-asset-registry-smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for KETTE asset registry",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "truffle test",
    "flatten": "mkdir -p build && solidity_flattener --solc-paths=\"openzeppelin-solidity/=$(pwd)/node_modules/openzeppelin-solidity/\" --output build/BicycleRegistryMerged.sol contracts/BicycleRegistry.sol",
    "dev-start": "concurrently \"npm run ganache\" \"npm run dev-deploy && npm run trim && npm run copyToBackend\"",
    "ganache": "ganache-cli -i 666 -m \"kette\"",
    "dev-deploy": "truffle migrate --reset --network development",
    "trim": "node utilities/trimContractJson",
    "copyToBackend": "cp ./build/contracts/BicycleRegistry.json ../nft-asset-registry-backend/contract/BicycleRegistryPublish.json"
  },
  "author": "friedhelmensch",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^4.0.1",
    "lodash.range": "^3.2.0",
    "openzeppelin-solidity": "^2.0.0",
    "truffle-hdwallet-provider": "^1.0.0-web3one.1"
  }
}
